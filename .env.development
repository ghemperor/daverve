# Development Environment Configuration
# These settings optimize hot-reload and development experience

# Enable Fast Refresh for instant React component updates
FAST_REFRESH=true

# Disable polling for better performance (use native file watching)
CHOKIDAR_USEPOLLING=false

# Prevent automatic browser opening (you can manually navigate)
BROWSER=none

# Use dynamic port for WebSocket connections
WDS_SOCKET_PORT=0

# Enable source maps for better debugging
GENERATE_SOURCEMAP=true

# Disable browser notifications for build errors (less intrusive)
BROWSER_NOTIFICATIONS=false

# Enable silent refresh (less console noise)
SILENT_REFRESH=true